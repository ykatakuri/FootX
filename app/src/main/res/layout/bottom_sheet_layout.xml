<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_sheet_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:padding="4dp">

    <TextView
        android:id="@+id/bottom_sheet_field_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:padding="4dp"
        android:text="Field Name"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/bottom_sheet_imageview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/bottom_sheet_field_name"
        android:layout_centerVertical="true"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:src="@drawable/bg" />

    <TextView
        android:id="@+id/bottom_sheet_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bottom_sheet_field_name"
        android:layout_margin="4dp"
        android:layout_toEndOf="@id/bottom_sheet_imageview"
        android:layout_toRightOf="@id/bottom_sheet_imageview"
        android:padding="3dp"
        android:text="Date"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/bottom_sheet_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bottom_sheet_date"
        android:layout_margin="4dp"
        android:layout_toRightOf="@id/bottom_sheet_imageview"
        android:padding="3dp"
        android:text="Time"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/bottom_sheet_format"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bottom_sheet_time"
        android:layout_margin="4dp"
        android:layout_toRightOf="@id/bottom_sheet_imageview"
        android:padding="3dp"
        android:text="Format"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bottom_sheet_format"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/bottom_sheet_button_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:text="Modifier"
            android:textAllCaps="false" />

    </LinearLayout>

</RelativeLayout>
